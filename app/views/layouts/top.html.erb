<!DOCTYPE html>
<html>
<head>
  <title><%= page_title %></title>
  <%= stylesheet_link_tag controller_name, media: "all", 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
  <%= javascript_include_tag 'jquery.bxslider.min', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'mosaic.1.0.1.min.js', 'data-turbolinks-track' => true %>
  <script type="text/javascript">  
	$(document).ready(function($){
				
				$('.circle').mosaic({
					opacity		:	0.8			//Opacity for overlay (0-1)
				});
				
				$('.fade').mosaic();
				
				$('.bar').mosaic({
					animation	:	'slide'		//fade or slide
				});
				
				$('.bar2').mosaic({
					animation	:	'slide'		//fade or slide
				});
				
				$('.bar3').mosaic({
					animation	:	'slide',	//fade or slide
					anchor_y	:	'top'		//Vertical anchor position
				});
				
				$('.cover').mosaic({
					animation	:	'slide',	//fade or slide
					hover_x		:	'400px'		//Horizontal position on hover
				});
				
				$('.cover2').mosaic({
					animation	:	'slide',	//fade or slide
					anchor_y	:	'top',		//Vertical anchor position
					hover_y		:	'80px'		//Vertical position on hover
				});
				
				$('.cover3').mosaic({
					animation	:	'slide',	//fade or slide
					hover_x		:	'400px',	//Horizontal position on hover
					hover_y		:	'300px'		//Vertical position on hover
				});

		    
		    });
  </script>
  <%= stylesheet_link_tag "jquery.bxslider", :media => "all" %>
  <%= stylesheet_link_tag "mosaic.css", :media => "all" %>
</head>
<body data-no-turbolink="1">
<div class="wrap">
	<%= render "shared/header" %>
		<div class="content">
			<div class="main">
				<ul class = "g_menu">
					<li class = "lists">
						<ul class="menu_box">
							<li class = "first_list"><%= link_to_unless_current "NEW ARRIVAL", new_arrivals_path %></li>
						</ul>
					</li>
					<li class = "lists">
						<ul class="menu_box">
							<li class = "first_list"><%= link_to_unless_current "RECOMMEND", recommend_path %></li>
						</ul>
					</li>
					<!--DBから取得-->
					<% @categories.zip(@subcategories_list).each do |category,subcategories| %>
					<li class = "lists">
						<ul class="menu_box">
							<li class = "first_list"><%= link_to_unless_current category.name, categorized_path(category:category, category_name: category.name)  %></li>
							<% subcategories.each do |subcategory| %>
							<li class = "other_row"><%= link_to_unless_current subcategory.name, categorized_path(category: category, subcategory: subcategory, category_name: category.name, subcategory_name: subcategory.name)  %></li>
							<% end %>
						</ul>
					</li>
					<% end %>
					<li class = "lists">
						<ul class="menu_box">
							<li class = "first_list"><%= link_to_unless_current "BLOG", blog_path %></li>
						</ul>
					</li>
					<li class = "lists">
						<ul class="menu_box">
							<li class = "first_list"><%= link_to_unless_current "CONTACT", contact_path %></li>
						</ul>
					</li>
				</ul>
				<div class="show_case">
					<%= yield %>
				</div>
				<% if @items %>
		        	<%= will_paginate @items %>
		        <% end %>
			</div>
		</div>
		<p id="page-top"><a href="#wrap">PAGE TOP</a></p>
	<%= render "shared/footer" %>
</div>
<script type="text/javascript">
      $(document).ready(function(){
          var slider = $('.bxslider').bxSlider({
              auto: true,
			  speed: 1500,
			  pause: 5500,
			  mode: 'fade',
			  onSlideAfter: function () { slider.startAuto(); },
          });
      });
</script>
