<% @page_title = "contents_name" %>
<% if @current_admin_user %>
<%= render "shared/admin/info_bar" %>
<% if @current_admin_user.authority_id==1||@current_admin_user.authority_id==2 %>
<div class="controll">
	<%= link_to(image_tag("edit-icon.png",:size => "30x30", :alt => "edit_"+@color.id.to_s) , [:edit, :admin, @color] ) %>
	<%= link_to(image_tag("delete-icon.png",:size => "30x30", :alt => "delete_"+@color.id.to_s) , admin_color_path(@color), method: :delete, confirm: "Are You Sure to Delete「"+@color.name+"」?" ) %>
</div>
<%end%>
<div class="item_info">
	<h1> <%= @color.name %> </h1>
	<p class="label">code</p>
	<p class="info"><%= @color.code %></p>
	<p class="label">creator</p>
	<p class="info"><%= @color.create_user %></p>
	<p class="label">editor</p>
	<p class="info"><%= @color.edit_user %></p>
	<p class="label">created at</p>
	<p class="info"><%= @color.created_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">edited at</p>
	<p class="info"><%= @color.updated_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">comment</p>
	<p class="info"><%= simple_format(@color.comment) %></p>
</div>
<% else %>
<%= render "shared/login_form" %>
<% end %>
