<% @page_title = "contents_name" %>
<% if @current_admin_user %>
<%= render "shared/admin/info_bar" %>
<% if @current_admin_user.authority_id==1||@current_admin_user.authority_id==2 %>
<div class="controll">
	<%= link_to(image_tag("edit-icon.png",:size => "30x30", :alt => "edit_"+@status.id.to_s) , [:edit, :admin, @status] ) %>
	<%= link_to(image_tag("delete-icon.png",:size => "30x30", :alt => "delete_"+@status.id.to_s) , admin_status_path(@status), method: :delete, confirm: "Are You Sure to Delete「"+@status.name+"」?" ) %>
</div>
<%end%>
<div class="item_info">
	<h1> <%= @status.name %> </h1>
	<p class="label">ratio</p>
	<p class="info"><%= @status.ratio %> %</p>
	<% color=Color.find(@status.color_id) %>
	<p class="label">color</p>
	<p class="info" style="background-color: <%= color.code %>"><%= color.name %></p>
	<p class="label">creator</p>
	<p class="info"><%= @status.create_user %></p>
	<p class="label">editor</p>
	<p class="info"><%= @status.edit_user %></p>
	<p class="label">created at</p>
	<p class="info"><%= @status.created_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">edited at</p>
	<p class="info"><%= @status.updated_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">comment</p>
	<p class="info"><%= simple_format(@status.comment) %></p>
</div>
<% else %>
<%= render "shared/login_form" %>
<% end %>
