<% @page_title = "contents_name" %>
<% if @current_user %>
<%= render "shared/admin/info_bar" %>
<% if @current_user.authority_id==1||@current_user.authority_id==2 %>
<div class="controll">
	<%= link_to(image_tag("edit-icon.png",:size => "30x30", :alt => "edit_"+@fabric.id.to_s) , [:edit, :admin, @fabric] ) %>
	<%= link_to(image_tag("delete-icon.png",:size => "30x30", :alt => "delete_"+@fabric.id.to_s) , admin_fabric_path(@fabric), method: :delete, confirm: "Are You Sure to Delete「"+@fabric.name+"」?" ) %>
</div>
<% end %>
<div class="item_info">
	<h1> <%= @fabric.name %> </h1>
	<p class="label">description</p>
	<p class="description"><%= simple_format(@fabric.description) %></p>
	<p class="label">creator</p>
	<p class="info"><%= @fabric.create_user %></p>
	<p class="label">editor</p>
	<p class="info"><%= @fabric.edit_user %></p>
	<p class="label">created at</p>
	<p class="info"><%= @fabric.created_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">edited at</p>
	<p class="info"><%= @fabric.updated_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">comment</p>
	<p class="info"><%= simple_format(@fabric.comment) %></p>
</div>
<% else %>
<%= render "shared/login_form" %>
<% end %>
