<% @page_title = "contents_name" %>
<% if @current_user %>
<%= render "shared/admin/info_bar" %>
<% if @current_user.authority_id==1||@current_user.authority_id==2 %>
<div class="controll">
	<%= link_to(image_tag("edit-icon.png",:size => "30x30", :alt => "edit_"+@category.id.to_s) , [:edit, :admin, @category] ) %>
	<%= link_to(image_tag("delete-icon.png",:size => "30x30", :alt => "delete_"+@category.id.to_s) , admin_category_path(@category), method: :delete, confirm: "Are You Sure to Delete「"+@category.name+"」?" ) %>
</div>
<% end %>
<div class="item_info">
	<h1> <%= @category.name %> </h1>
	<p class="label">gmenu_flag</p>
	<p class="info"><%= @category.gmenu_flag %></p>
	<p class="label">creator</p>
	<p class="info"><%= @category.create_user %></p>
	<p class="label">editor</p>
	<p class="info"><%= @category.edit_user %></p>
	<p class="label">created at</p>
	<p class="info"><%= @category.created_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">edited at</p>
	<p class="info"><%= @category.updated_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">comment</p>
	<p class="info"><%= simple_format(@category.comment) %></p>
</div>
<% else %>
<%= render "shared/login_form" %>
<% end %>
