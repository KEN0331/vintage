<% @page_title = "contents_name" %>
<% if @current_admin_user %>
<%= render "shared/admin/info_bar" %>
<% if @current_admin_user.authority_id==1||@current_admin_user.authority_id==2 %>
<div class="controll">
	<%= link_to(image_tag("edit-icon.png",:size => "30x30", :alt => "edit_"+@condition.id.to_s) , [:edit, :admin, @condition] ) %>
	<%= link_to(image_tag("delete-icon.png",:size => "30x30", :alt => "delete_"+@condition.id.to_s) , admin_condition_path(@condition), method: :delete, confirm: "Are You Sure to Delete「"+@condition.name+"」?" ) %>
</div>
<% end %>
<div class="item_info">
	<h1> <%= @condition.name %> </h1>
	<p class="label">description</p>
	<p class="description"><%= simple_format(@condition.description) %></p>
	<p class="label">creator</p>
	<p class="info"><%= @condition.create_user %></p>
	<p class="label">editor</p>
	<p class="info"><%= @condition.edit_user %></p>
	<p class="label">created at</p>
	<p class="info"><%= @condition.created_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">edited at</p>
	<p class="info"><%= @condition.updated_at.try(:strftime,"%Y/%m/%d %H:%M") %></p>
	<p class="label">comment</p>
	<p class="info"><%= simple_format(@condition.comment) %></p>
</div>
<% else %>
<%= render "shared/login_form" %>
<% end %>
